@model IEnumerable<GlobalSolution.Entity.Paciente>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="table-responsive">
    <div class="card">
        <div class="card-header">Pesquisar pacientes</div>
        <div class="card-body">
            <form action="/Pacientes/Index" method="get">
                <div class="row">
                    <div class="col-4">
                        <a href="/Usuarios/Create" class="btn btn-success">Criar novo paciente</a>
                    </div>
                    <div class="col-4">
                        <input type="text" name="query" class="form-control" placeholder="Digite sua busca" />
                    </div>
                    <div class="col-4">
                        <button class="btn btn-primary" type="submit">Pesquisar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Usuario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Idade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SexoBiologico)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Colesterol)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Triglicerol)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Diabete)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fumante)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Obeso)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ConsumoAlcool)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dieta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UsoMedicamentos)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Idade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SexoBiologico)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Colesterol)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Triglicerol)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Diabete)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fumante)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Obeso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ConsumoAlcool)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dieta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UsoMedicamentos)
                    </td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Action buttons">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
