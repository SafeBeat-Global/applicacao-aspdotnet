@model GlobalSolution.Entity.Monitor

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Monitor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="IdUsuario" type="hidden" value="@ViewBag.UsuarioId" />
                <label class="control-label">Email</label>
                <input class="form-control" readonly value="@ViewBag.UsuarioEmail" />
            <div class="form-group">
                <label asp-for="IdInstituicao" class="control-label">Instituição:</label>
                @if (ViewBag.ExisteInstituicao)
                {
                    <select asp-for="IdInstituicao" class ="form-control" asp-items="ViewBag.IdInstituicao"></select>
                } else
                {
                    <p>Não há instituições cadastradas.</p>
                    
                }
            </div>
            <div class="form-group">
                <label for="PacienteId">Selecione um Paciente:</label>
                <select asp-for="PacienteId" class="form-control" asp-items="ViewBag.Pacientes" multiple></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
