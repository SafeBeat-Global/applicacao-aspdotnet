@model GlobalSolution.Entity.Monitor

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Monitor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instituicao)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Instituicao != null)
            {
                @Html.DisplayFor(model => model.Instituicao.Endereco)
            }
            else
            {
                <p>---</p>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MonitorPacientes)
        </dt>
        <dd class="col-sm-10">
            @if (Model.MonitorPacientes.Any())
            {
                <ul>
                    @foreach (var mp in Model.MonitorPacientes)
                    {
                        <li>@mp.Paciente.Usuario.Nome</li>
                    }
                </ul>
            }
            else
            {
                <p>---</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
